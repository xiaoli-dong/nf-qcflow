    contributors = [
        [
            name: 'Xiaoli Dong',
            affiliation: '',
            email: '',
            github: '',
            contribution: [],
            orcid: '',
        ]
    ]
    homePage = 'https://github.com/xiaoli-dong/qcflow'
    description = """Sequence data quality assessement and quality control"""
    mainScript = 'main.nf'
    defaultBranch = 'main'
